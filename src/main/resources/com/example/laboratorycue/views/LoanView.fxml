                  <Image url="@../../../../../java/com/example/laboratorycue/image/logo@2x.png" />
               </image>
            </ImageView>
            <TableView fx:id="tableObjectsLoans" layoutX="249.0" layoutY="126.0" prefHeight="240.0" prefWidth="684.0">
