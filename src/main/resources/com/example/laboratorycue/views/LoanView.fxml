                  <Button fx:id="btnConfirmLoan" mnemonicParsing="false" onAction="#confirmLoan" text="Confirm Loan" />
                  <Button fx:id="btnAddProduct" mnemonicParsing="false" onAction="#addProduct" prefHeight="26.0" prefWidth="100.0" text="Add product" />
                  <DatePicker promptText="Select the end date">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </DatePicker>
               </children>
            </VBox>
         </children>
      </AnchorPane>
  </children>
