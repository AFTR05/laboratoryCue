            <TableView fx:id="tableObject" layoutX="360.0" layoutY="115.0" prefHeight="226.0" prefWidth="569.0">
               <columns>
                  <TableColumn fx:id="columnNameObject" prefWidth="115.0" text="Name" />
                  <TableColumn fx:id="columnStockObject" prefWidth="115.0" text="Stock" />
                  <TableColumn fx:id="columnPriceObject" prefWidth="115.0" text="Price" />
                  <TableColumn fx:id="columnCodeObject" prefWidth="115.0" text="Code" />
                  <TableColumn fx:id="columnTypeObject" prefWidth="115.0" text="Type" />
               </columns>
            </TableView>
            <Button fx:id="btnBlockObject" layoutX="260.0" layoutY="360.0" mnemonicParsing="false" onAction="#blockObject" prefHeight="20.0" prefWidth="70.0" text="Block" />
            <Button fx:id="btnDeleteObject" layoutX="181.0" layoutY="360.0" mnemonicParsing="false" onAction="#deleteObject" prefHeight="20.0" prefWidth="70.0" text="Delete" />
            <Button fx:id="btnUpdateObject" layoutX="98.0" layoutY="360.0" mnemonicParsing="false" onAction="#updateObject" prefHeight="20.0" prefWidth="70.0" text="Update" />
            <Separator layoutX="341.0" orientation="VERTICAL" prefHeight="109.0" prefWidth="5.0" />
            <ComboBox fx:id="cbTypeObject" layoutX="14.0" layoutY="308.0" onAction="#seleccionarTipodeObjetoAction" prefHeight="26.0" prefWidth="288.0" promptText="Type" />
            <Label graphicTextGap="6.0" layoutX="19.0" layoutY="21.0" prefHeight="66.0" prefWidth="280.0" text="Object Register" textOverrun="CLIP">
               <font>
                  <Font name="Courier New" size="26.0" />
               </font>
               <effect>
                  <Blend mode="DARKEN" />
               </effect>
            </Label>
         </children>
      </AnchorPane>
  </children>
</VBox>
