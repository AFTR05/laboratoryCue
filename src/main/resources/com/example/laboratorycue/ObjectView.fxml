    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="menuOptionMonitorObjects" mnemonicParsing="false" onAction="#changeToMonitorView" text="Monitor" />
        <Menu fx:id="menuOptionStudentObjects" mnemonicParsing="false" onAction="#changeToStudentView" text="Student" />
        <Menu fx:id="menuOptionObjectsObjects" mnemonicParsing="false" text="Objects" />
            <Menu fx:id="menuOptionLoanObjects" mnemonicParsing="false" onAction="#changeToLoanView" text="Loan" />
            <Menu fx:id="menuOptionReportsObjects" mnemonicParsing="false" onAction="#changeToReportsView" text="Reports" />
      </menus>
    </MenuBar>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
         <children>
            <DialogPane layoutX="27.0" layoutY="32.0" />
            <ImageView fitHeight="100.0" fitWidth="340.0" layoutX="460.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../java/com/example/laboratorycue/image/logo@2x.png" />
               </image>
            </ImageView>
            <TextField fx:id="txtNameObject" layoutX="14.0" layoutY="115.0" prefHeight="30.0" prefWidth="290.0" promptText="Name">
               <font>
                  <Font name="Courier New Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPriceObject" layoutX="14.0" layoutY="210.0" prefHeight="30.0" prefWidth="290.0" promptText="Price">
               <font>
                  <Font name="Courier New Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtStockObject" layoutX="14.0" layoutY="160.0" prefHeight="30.0" prefWidth="290.0" promptText="Stock">
               <font>
                  <Font name="Courier New Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtCodeObject" layoutX="14.0" layoutY="260.0" prefHeight="30.0" prefWidth="290.0" promptText="Code ">
               <font>
                  <Font name="Courier New Bold" size="12.0" />
               </font>
            </TextField>
            <Separator layoutX="-5.0" layoutY="350.0" prefHeight="3.0" prefWidth="953.0" />
            <Button fx:id="btnCreateObject" layoutX="14.0" layoutY="360.0" mnemonicParsing="false" onAction="#createObject" prefHeight="20.0" prefWidth="70.0" text="Create" />
