<VBox prefHeight="479.0" prefWidth="947.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laboratorycue.controller.studentViewController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="MenuOptionMonitorStudent" mnemonicParsing="false" onAction="#changeToMonitorView" text="Monitor" />
        <Menu fx:id="menuOptionStudentStudent" mnemonicParsing="false" text="Student" />
        <Menu fx:id="menuOptionObjectsStudent" mnemonicParsing="false" onAction="#changetoObjectsView" text="Objects" />
            <Menu fx:id="menuOptionLoanStudent" mnemonicParsing="false" onAction="#changeToLoanView" text="Loan" />
            <Menu fx:id="menuOptionReportsStudent" mnemonicParsing="false" onAction="#changeToReportsView" text="Reports" />
      </menus>
    </MenuBar>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="100.0" fitWidth="340.0" layoutX="460.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../java/com/example/laboratorycue/image/logo@2x.png" />
               </image>
            </ImageView>
            <TextField fx:id="txtNameStudent" layoutX="14.0" layoutY="115.0" prefHeight="30.0" prefWidth="290.0" promptText="Name">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtDirectionStudent" layoutX="14.0" layoutY="210.0" prefHeight="30.0" prefWidth="290.0" promptText="Direction">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtCareerStudent" layoutX="14.0" layoutY="160.0" prefHeight="30.0" prefWidth="290.0" promptText="Career">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
            <Button fx:id="btnCreateStudent" layoutX="14.0" layoutY="360.0" mnemonicParsing="false" onAction="#createStudent" prefHeight="20.0" prefWidth="70.0" text="Create" />
            <Button fx:id="btnCancelStudent" layoutX="97.0" layoutY="360.0" mnemonicParsing="false" onAction="#cancelStudent" prefHeight="20.0" prefWidth="70.0" text="Cancel" />
            <TextField fx:id="txtIdStudent" layoutX="14.0" layoutY="260.0" prefHeight="30.0" prefWidth="290.0" promptText="Id">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
            <TableView fx:id="tableStudent" layoutX="360.0" layoutY="115.0" prefHeight="224.0" prefWidth="580.0">
               <columns>
                  <TableColumn fx:id="columnNameStudent" prefWidth="115.0" text="Name" />
                  <TableColumn fx:id="columnCareerStudent" prefWidth="115.0" text="Career" />
                  <TableColumn fx:id="columnDirectionStudent" prefWidth="115.0" text="Direction" />
                  <TableColumn fx:id="columnIdStudent" prefWidth="115.0" text="Id" />
                  <TableColumn fx:id="columnTypeStudent" prefWidth="115.0" text="Type" />
               </columns>
            </TableView>
            <Button fx:id="btnDeleteStudent" layoutX="180.0" layoutY="359.0" mnemonicParsing="false" onAction="#deleteStudent" prefHeight="26.0" prefWidth="75.0" text="Delete" />
            <Separator layoutX="14.0" layoutY="350.0" prefWidth="292.0" />
            <Separator layoutX="330.0" layoutY="115.0" orientation="VERTICAL" prefHeight="227.0" prefWidth="5.0" />
            <Separator layoutX="360.0" layoutY="350.0" prefHeight="0.0" prefWidth="581.0" />
            <Separator layoutX="330.0" layoutY="1.0" orientation="VERTICAL" prefHeight="109.0" prefWidth="5.0" />
            <ComboBox fx:id="cbTypeStudent" layoutX="14.0" layoutY="305.0" onAction="#seleccionarTipoDocumentoAction" prefHeight="26.0" prefWidth="289.0" promptText="Type" />
            <Label graphicTextGap="6.0" layoutX="14.0" layoutY="22.0" prefHeight="66.0" prefWidth="280.0" text="Student Register" textOverrun="CLIP">
               <font>
                  <Font name="Courier New" size="26.0" />
               </font>
               <effect>
                  <Blend mode="DARKEN" />
               </effect>
            </Label>
         </children>
      </AnchorPane>
  </children>
</VBox>
